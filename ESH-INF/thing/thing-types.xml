<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="fibaro"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
        xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

    <!-- Binary Switch Thing Type -->
    <thing-type id="binarySwitch">
        <supported-bridge-type-refs>
            <bridge-type-ref id="fibaroBridge" />
        </supported-bridge-type-refs>
        <label>Binary Switch</label>
        <description>Thing used for a Fibaro binary switch</description>

        <channels>
            <channel id="switch" typeId="switch"/>
            <channel id="dead" typeId="dead"/>
            <channel id="energy" typeId="energy"/>
            <channel id="power" typeId="power"/>
        </channels>
        
        <config-description>
            <parameter name="id" type="integer" min="1" required="true">
                <label>Device id</label>
                <description>The z-wave device id on the Fibaro controller</description>
            </parameter>
            
        </config-description>        
    </thing-type>
    
    <!-- Dimmer Thing Type -->
    <thing-type id="dimmer">
        <supported-bridge-type-refs>
            <bridge-type-ref id="fibaroBridge" />
        </supported-bridge-type-refs>
        <label>Dimmer Thing</label>
        <description>Thing used for a Fibaro Dimmer</description>

        <channels>
            <channel id="dimmer" typeId="dimmer"/>
            <channel id="dead" typeId="dead"/>
            <channel id="energy" typeId="energy"/>
            <channel id="power" typeId="power"/>
        </channels>
        
        <config-description>
            <parameter name="id" type="integer" min="1" required="true">
                <label>Device id</label>
                <description>The z-wave device id on the Fibaro controller</description>
            </parameter>
            
        </config-description>        
    </thing-type>
    

    <channel-type id="switch">
        <item-type>Switch</item-type>
        <label>Switch</label>
        <description>Current state of the Switch</description>
    </channel-type>

    <channel-type id="dimmer">
        <item-type>Dimmer</item-type>
        <label>Dimmer</label>
        <description>Current state of the Dimmer</description>
        <category>DimmableLight</category>
    </channel-type>

    <channel-type id="dead">
        <item-type>Switch</item-type>
        <label>Dead</label>
        <description>Holds information if the device is dead or not</description>
        <state readOnly="true">
        </state>
    </channel-type>

    <channel-type id="energy">
        <item-type>Number</item-type>
        <label>Energy</label>
        <description>Total energy consumption by this device in kWh</description>
        <category>Energy</category>
        <state readOnly="true" pattern="%.2f kWh">
        </state>
    </channel-type>
    
    <channel-type id="power">
        <item-type>Number</item-type>
        <label>Power</label>
        <description>Current device power usage in W</description>
        <category>Energy</category>
        <state readOnly="true" pattern="%.2f W">
        </state>
        
    </channel-type>

</thing:thing-descriptions>
